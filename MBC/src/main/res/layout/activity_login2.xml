<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.transvision.mbc.ActivityLogin2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/subdiv_logo"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/subdiv" />

            <Button
                android:id="@+id/login_btn"
                android:layout_marginTop="150dp"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/mybuton"
                android:text="@string/login_btn"
                android:textAllCaps="false"
                android:textColor="#212121"
                android:textSize="@dimen/text18" />

        </LinearLayout>
    <LinearLayout
        android:layout_above="@+id/company_details_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="Version"
            android:textAlignment="viewEnd"
            android:textSize="15sp" />
        <TextView
            android:layout_weight="1.9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:text=":" />
        <TextView
            android:id="@+id/txt_version_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>
    <TextView
        android:id="@+id/company_details_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/company_details"
        android:textColor="@color/company_details_color"
        android:textSize="@dimen/text12"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
